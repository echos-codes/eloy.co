---
import emailSvgRef from '/assets/icons/mail.svg';
import linkedinSvgRef from '/assets/icons/linkedin.svg';
import githubSvgRef from '/assets/icons/github.svg';
import twitterSvgRef from '/assets/icons/twitter.svg';
---

<div class="flex items-center justify-center py-6 px-4 sm:py-8 sm:text-xl">
  <a
    class="not-prose p-4 items-center transition-all hover:text-yellow-400"
    href="mailto:hi@eloy.co"
    rel="noopener"
    target="_blank"
    aria-label="email addres link"
  >
    <img class="svg-icon" src={emailSvgRef} height="24" width="24" alt="email logo" />
  </a>

  <a
    class="not-prose p-4 items-center transition-all hover:text-yellow-400"
    href="https://linkedin.com/in/eloy-castelo/"
    rel="noopener"
    target="_blank"
    aria-label="LinkedIn account link"
  >
    <img class="svg-icon" src={linkedinSvgRef} height="24" width="24" alt="LinkedIn logo" />
  </a>

  <a
    class="not-prose p-4 items-center transition-all hover:text-yellow-400"
    href="https://github.com/eloydotco"
    rel="noopener"
    target="_blank"
    aria-label="Github acount link"
  >
    <img class="svg-icon" src={githubSvgRef} height="24" width="24" alt="Github logo" />
  </a>

  <a
    class="not-prose p-4 items-center transition-all hover:text-yellow-400"
    href="https://twitter.com/eloydotco"
    rel="noopener"
    target="_blank"
    aria-label="Twitter account link"
  >
    <img class="svg-icon" src={twitterSvgRef} height="24" width="24" alt="Twitter logo" />
  </a>
</div>
