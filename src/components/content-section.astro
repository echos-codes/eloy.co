---
const { title, id } = Astro.props;
---

<section {id} class="flex flex-col items-center gap-4 space-y-8 scroll-mt-24">
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2 class="text-4xl font-bold text-center gradient-text">
      {title}
    </h2>
  </div>
  <p class="max-w-2xl text-xl text-center">
    <slot name="lead" />
  </p>
  <slot />
</section>
