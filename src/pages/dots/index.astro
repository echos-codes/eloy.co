---
import DotFeed from '../../components/DotFeed.astro';
import Layout from '../../layouts/BaseLayout.astro';

const title = 'dots';
const description = 'My blog with personal recommendations about whatever I found interesting';

const posts = (await Astro.glob('./data/*.md')).sort(
  (a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf()
);
---

<Layout {title} {description}>
  <DotFeed {description} {posts} />
</Layout>
