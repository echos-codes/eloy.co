---
import emailSvgRef from '../icons/mail.svg';
import linkedinSvgRef from '../icons/linkedin.svg';
import githubSvgRef from '../icons/github.svg';
import twitterSvgRef from '../icons/twitter.svg';
---

<div class="flex items-center justify-center py-6 px-4 sm:py-8 sm:text-xl">
  <a
    class="p-4 items-center transition-all hover:text-yellow-400"
    href="mailto:hi@eloy.co"
    rel="noopener"
    target="_blank"
    aria-label="email"
  >
    <img class="svg-icon" src={emailSvgRef} />
  </a>

  <a
    class="p-4 items-center transition-all hover:text-yellow-400"
    href="https://linkedin.com/in/eloy-castelo/"
    rel="noopener"
    target="_blank"
    aria-label="LinkedIn"
  >
    <img class="svg-icon" src={linkedinSvgRef} />
  </a>

  <a
    class="p-4 items-center transition-all hover:text-yellow-400"
    href="https://github.com/eloydotco"
    rel="noopener"
    target="_blank"
    aria-label="GitHub"
  >
    <img class="svg-icon" src={githubSvgRef} />
  </a>

  <a
    class="p-4 items-center transition-all hover:text-yellow-400"
    href="https://twitter.com/eloydotco"
    rel="noopener"
    target="_blank"
    aria-label="Twitter"
  >
    <img class="svg-icon" src={twitterSvgRef} />
  </a>
</div>
